
<CustButton@Button>:
    font_size: 32
    background_normal: ''
    background_color:[242/255.0, 242/255.0, 242/255.0, 1]
    color: [64/255.0, 64/255.0 ,64/255.0 ,1]
    
<SignButton@Button>:
    font_size: 32
    background_normal: ''
    color: [64/255.0, 64/255.0 ,64/255.0 ,1]
    background_color:[77/255.0, 255/255.0, 77/255.0,1]
<DelButton@Button>:
    font_size: 32
    background_normal: ''
    color: [64/255.0, 64/255.0 ,64/255.0 ,1]
    background_color:[238/255.0, 32/255.0, 77/255.0,1]

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 10
    spacing: 20


    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text
        SignButton:
            text: "+"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text
        SignButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text
        SignButton:
            text: "*"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        DelButton:
            text: "C"
            on_press: entry.text = ""
        SignButton:
            text: "="
            on_press: calculator.calculate(entry.text)
        SignButton:
            text: "/"
            on_press: entry.text += self.text
